{
  "name": "es6-calculator",
  "version": "1.0.0",
  "description": "Practicing Javascript ES6",
  "main": "js/app.js",
  "scripts": {
    "serve": "./node_modules/.bin/http-server -a localhost -p 8000 -c-1",
    "build-css": "node-sass --output-style compressed -o dist/css src/sass/app.scss",
    "build-js": "./node_modules/.bin/babel src/js -d dist/js",
    "watch-js": "nodemon -e js --watch src/js src/sass -x \"npm run build-js\"",
    "watch-sass": "nodemon -e scss  -x \"npm run build-css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FadumaM/es6-calculator.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FadumaM/es6-calculator/issues"
  },
  "homepage": "https://github.com/FadumaM/es6-calculator#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "node-sass": "^3.10.1",
    "npm-run-all": "^3.1.1"
  }
}
